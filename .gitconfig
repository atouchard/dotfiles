[color]
  ui = true

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[user]
  name = your name
  email = <youremail>

[alias]
  st = status
  ci = commit
  oneline = log --pretty=oneline --abbrev-commit --graph --decorate
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  br = branch
  co = checkout
  df = diff
  dc = diff --cached
  lg = log -p
  ls = ls-files

[core]
  autocrlf = input
  excludesfile = ~/.gitignore-global
  editor = vim

[credential]
  helper = osxkeychain

[merge]
  tool = kdiff3
